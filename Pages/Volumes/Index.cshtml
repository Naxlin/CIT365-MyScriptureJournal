@page
@model MyScriptureJournal.Pages_Volumes.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["active"] = "Volumes";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Volume[0].VolumeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Volume) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VolumeName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VolumeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VolumeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VolumeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
