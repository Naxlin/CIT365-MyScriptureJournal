@page
@model MyScriptureJournal.Pages_Scriptures.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["active"] = "Scriptures";
}

<h1>Edit</h1>

<h4>Scripture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scripture.ScriptureId" />
            <div class="form-group">
                <label asp-for="Scripture.BookId" class="control-label"></label>
                <select asp-for="Scripture.BookId" class="form-control" asp-items="ViewBag.BookList">
                    <option value="">-- Select Book --</option>
                </select>
                <span asp-validation-for="Scripture.BookId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Chapter" class="control-label"></label>
                <input asp-for="Scripture.Chapter" class="form-control" />
                <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Verse" class="control-label"></label>
                <input asp-for="Scripture.Verse" class="form-control" />
                <span asp-validation-for="Scripture.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Note" class="control-label"></label>
                <input asp-for="Scripture.Note" class="form-control" />
                <span asp-validation-for="Scripture.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Date" class="control-label"></label>
                <input asp-for="Scripture.Date" class="form-control" />
                <span asp-validation-for="Scripture.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-warning site-right" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
