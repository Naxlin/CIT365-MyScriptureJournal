@page
@model MyScriptureJournal.Pages_Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["active"] = "Scriptures";
}

<h1>Scripture Journal List</h1>

<div class="site-bgcolor site-center-v">
    <a class="btn btn-success site-left" asp-page="Create">Create New</a>
    <form class="site-right" asp-page="./Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name:
                <input type="text" name="SearchString" value="@Model.CurrentFilter" />
                <input type="submit" value="Search" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-page="./Index">Back to full List</a>
            </p>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th class="site-date-col">
                <a class="btn btn-secondary site-button" asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Scriptures[0].Date)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Book.Volume.VolumeName)
            </th>
            <th>
                <a class="btn btn-secondary site-button" asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.Scriptures[0].Book.BookName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scriptures) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Volume.VolumeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <p><a asp-page="./Edit" asp-route-id="@item.ScriptureId"><button class="btn btn-warning site-button">Edit</button></a></p>
                <p><a asp-page="./Details" asp-route-id="@item.ScriptureId"><button class="btn btn-info site-button">Details</button></a></p>
                <p><a asp-page="./Delete" asp-route-id="@item.ScriptureId"><button class="btn btn-danger site-button">Delete</button></a></p>
            </td>
        </tr>
}
    </tbody>
</table>
